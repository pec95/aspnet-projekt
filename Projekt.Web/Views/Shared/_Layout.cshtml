<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-signin-client_id" content="322969149280-j72oaup1gkle2fhkf3t251dumvvdihoh.apps.googleusercontent.com">
    <title>@ViewData["Title"] - Projekt</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

    <link rel="icon" type="image/x-icon" href="~/slike/favicon.ico">

    <style>
        nav {
            background: black;
        }

        label {
            font-weight: 600;
        }

        a:visited {
            color: black;
        }

        .btn-dark {
            outline-color: black;
            background: black;
        }

        .btn-outline-dark {
            outline-color: black;
            color: black;
        }

            .btn-outline-dark:hover {
                outline-color: black;
                background: black;
            }

        .btn-danger {
            outline-color: red;
            background: red;
        }

        .btn-outline-danger {
            outline-color: red;
        }

            .btn-outline-danger:hover {
                outline-color: red;
                background: red;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="~/slike/lopta_neprozirna.png" width="50" height="50" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Momcad" asp-action="Tablica">Tablica</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Momcad" asp-action="PopisMomcadi">Popis momčadi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Igrac" asp-action="PopisIgraca">Popis igrača</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Igrac" asp-action="Transferi">Transferi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="ONama">O nama</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center text-muted">
        <div class="container">
            PROJEKT
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
